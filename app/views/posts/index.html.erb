<h1>Posts</h1>
<% if params[:q].present? %>
  <% if !@searchpost.empty? %>
    <h2>Search Results... </h2>
    <ul>
      <% @searchpost.each do |post| %>
        <li><%= link_to post._source.title, post_path(post.id) %></li>
      <% end %>
    </ul>
  <% else %>
    <h3 class="topDown">Your search returned no results... Try Again!</h3>
    <%= render "shared/search_form" %>
  <% end %>
<% else %>
  <%= render "posts" %>
<% end %>
