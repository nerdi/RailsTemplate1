<% if params[:q].present? %>
  <% if !@searchpost.empty? %>
    <h2>Search Results... </h2>
    <ul>
      <% @searchpost.each do |post| %>
        <li><%= link_to post._source.title, post_path(post.id) %></li>
      <% end %>
    </ul>
  <% else %>
    <h3 class="topDownWithNav">Your search returned no results... Try Again!</h3>
    <%= form_for search_path, method: :get, :html => { :class =>'form-inline' } do |f| %>
      <%= text_field_tag :q, params[:q], :placeholder => "Search", :class =>'form-control' %>
      <%= submit_tag "Go", name: nil, :class => 'btn btn-success-outline' %>
    <% end %>
  <% end %>
<% else %>
  <%= @post.title %>
  <%= markdown(@post.body) %>
  <%= image_tag attachment_url(@post, :profile_image, :fill, 250, 250) %>
  <%= image_tag attachment_url(@post, :image, :fill, 250, 250) %>
<% end %>
