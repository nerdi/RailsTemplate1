<% if params[:q].present? %>
  <% if !@post.empty? %>
    <%= render "shared/search_results" %>
  <% else %>
    <h3 class="topDownWithNav">Your search returned no results... Try Again!</h3>
    <%= render "shared/search_form" %>
  <% end %>
<% else %>
  <h3 class="topDownWithNav"><%= @post.title %></h3>
  <%= markdown(@post.body) %>
  <%= image_tag attachment_url(@post, :profile_image, :fill, 250, 250) %>
  <%= image_tag attachment_url(@post, :image, :fill, 250, 250) %>
  <%= @post.created_at.strftime("%d-%m-%Y") %>
<% end %>
